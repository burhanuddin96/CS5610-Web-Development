<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <b> Task Name: </b>
    <%= text_input f, :name %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <b> Task Description: </b>
    <%= textarea f, :desc, class: "form-control" %>
    <%= error_tag f, :desc %>
  </div>
  
  <div class="form-group">
    <b>Assigned To:</b>
    <%= text_input f, :user_id %>
    <%= link "View Users List", to: user_path(@conn, :index), class: "btn btn-default btn-xs" %>
    <%= error_tag f, :user_id %>
  </div>

  <div class="form-group">
    <b>Time Spent:</b> 
    <%= if(@task.completed == true) do %>
    Time spent: <%=@task.timeHRS%> hours <%=@task.timeMIN%> minutes
    <% else %>
    <%= number_input f, :timeHRS %>hours
    <%= error_tag f, :timeHRS %>
    <%= select f, :timeMIN, [0,15,30,45] %>minutes
    <%= error_tag f, :timeMIN %>
    <% end %>
  </div>

  <div class="form-group">
    <b> Task Completed? </b>
    <%= if(@task.completed == true) do %>
    Task is completed.
    <% else %>
    Task is not yet completed.
    <% end %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
