

<script>
    function Game() {
        var game = document.getElementById("gameName").value;
        if(game == "")
            alert("Enter Game Name!!");
        else{ 
            console.log(game);
            document.location.href = "game/" + game;
        }
    }
</script>
    
<div class="index-page">
    <h1>Memory Game</h1>
    <h5>Enter Game Name:  <input type="text" id="gameName"></h5><br>
    <button class="button" onClick=Game()> Enter Game </button>
</div>
